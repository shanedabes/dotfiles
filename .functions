g() {
  if [ "$#" -eq 0 ]; then
    git st
  else
    git $*
  fi

}

ali() {
  alias ${1:0:1}=${1}
}

termname() {
  printf '\033]2;%s\033\\' "$*"

}

zgen() {
  source "${HOME}/.zgen/zgen.zsh"
  zgen "$@"

}

y() {
  if [ "$#" -eq 0 ]; then
    yadm st
  else
    yadm $*
  fi

}

wp() {
    [ "${#}" -eq 0 ] && return

    [[ "${1}" =~ '^[0-9]$' ]] || return

    if [[ "${2}" == "" ]]; then
        wp_dir=~/Dropbox/Pictures/lorem
    else
        wp_dir="${2}"
    fi

    [ -d "${wp_dir}" ] || return

    sxiv -f -r -t "${wp_dir}" -o|head -1|xargs -r -I{} ln -sf {} ~/.local/share/background/${1}

    feh --bg-fill ~/.local/share/background/*
}
